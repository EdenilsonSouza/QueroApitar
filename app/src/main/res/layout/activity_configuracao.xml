<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfiguracaoActivity"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarConfiguracaoActivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:titleTextColor="@android:color/white">

        <Button
            android:id="@+id/btnSalvarEsporte"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/estilo_btn_salvar_partida"
            android:drawableLeft="@drawable/ic_check_24px"
            android:layout_gravity="right"
            android:onClick="SalvarConfiguracaoClick"
            android:longClickable="true"
            android:paddingLeft="15dp" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/conteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp">

            <LinearLayout
                android:id="@+id/linear_informacoes_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_foto_usuario"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_tipo_usuario_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Tipo de Usuario"
                    android:textAlignment="center"
                    />


                <TextView
                    android:id="@+id/txt_nome_usuario_config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="NOME"
                    android:textAlignment="center"
                    />

            </LinearLayout>

        <TextView
            android:id="@+id/separador_um"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8B8989"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
        </TextView>


            <LinearLayout
                android:id="@+id/linear_primeiro_esporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/linearDonoDoJogo"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="@string/txt_primeiro_esporte"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="2dp">

                        <Spinner
                            android:id="@+id/spinner_primeiro_esporte"
                            style="@style/estilo_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="@string/txt_primeiro_valor"/>

                    <EditText
                        android:id="@+id/txt_valor_primeiro_esporte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="5dp"
                        android:inputType="numberDecimal"
                        android:hint="Dígite um valor"
                        android:textSize="10sp"
                        />


                </LinearLayout>

            </LinearLayout>

        <TextView
            android:id="@+id/separador_dois"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8B8989"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
        </TextView>


        <LinearLayout
            android:id="@+id/linear_segundo_esporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_esportes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearDonoDoJogo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="@string/txt_segundo_esporte"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp">

                    <Spinner
                        android:id="@+id/spinner_segundo_esporte"
                        style="@style/estilo_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp" />


                </LinearLayout>

         </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_distancia_endereco"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="@string/txt_segundo_valor"/>

                <EditText
                    android:id="@+id/txt_valor_segundo_esporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="5dp"
                    android:textSize="10sp"
                    android:hint="Dígite um valor"
                    android:inputType="numberDecimal"
                    />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/separador_tres"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8B8989"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
        </TextView>

        <LinearLayout
            android:id="@+id/linear_terceiro_esporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearDonoDoJogo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="@string/txt_terceiro_esporte"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp">

                    <Spinner
                        android:id="@+id/spinner_terceiro_esporte"
                        style="@style/estilo_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_valor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_distancia_endereco"
                android:orientation="vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="@string/txt_terceiro_valor"/>

                <EditText
                    android:id="@+id/txt_valor_terceiro_esporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="5dp"
                    android:textSize="10sp"
                    android:hint="Dígite um valor"
                    android:inputType="numberDecimal"
                    />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/separador_quatro"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8B8989"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp">
        </TextView>

            <LinearLayout
                android:id="@+id/linear_distancia_endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:paddingLeft="5dp"
                    android:textSize="10sp"
                    android:text="Escolha uma distância para qual esta disposto a se deslocar para apitar."
                    />

                <SeekBar
                    android:id="@+id/seekBar_distancia_partidas_config"
                    style="@style/Widget.AppCompat.SeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="10"
                    android:background="#98FB98"
                    android:progressDrawable="@drawable/progress"
                    android:thumb="@drawable/seekbar_thumb"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/txt_distancia_escolhida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="5dp"
                    android:textSize="10sp"
                    />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>