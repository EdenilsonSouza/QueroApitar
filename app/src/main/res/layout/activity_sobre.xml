<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#29B329">

        <TextView
            android:id="@+id/txtNomeAPP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="@string/app_name"
            android:textColor="#000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtVersaoApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNomeAPP"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textColor="#233CC7"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="match_parent"
            android:layout_height="254dp"
            android:layout_below="@id/txtVersaoApp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo2" />


        <LinearLayout
            android:id="@+id/linearLIcensa"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/imgLogo"
            android:orientation="horizontal" >

            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableRow>
                    <TextView
                        android:id="@+id/txtLogoLicensa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="50sp"
                        android:layout_gravity="right"
                        android:textColor="#233CC7"
                        android:text=" 2019"
                        android:textSize="14sp"
                        android:drawableLeft="@drawable/ic_twotone_copyright_24px" />

                    <TextView
                        android:id="@+id/txtTextoLicensa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text=" -  Desenvolvido por Edenilson Souza"
                        android:textColor="#233CC7"
                        android:textSize="12sp" />
                        />
                </TableRow>

            </TableLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btnTermosDeUso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLIcensa"
            android:layout_marginTop="30dp"
            android:background="#29B329"
            android:text="Termos de Uso"
            android:textColor="#FF9800"
            android:textSize="18sp" />

    </RelativeLayout>




</FrameLayout>