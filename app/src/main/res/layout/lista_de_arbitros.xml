<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_itenslistas_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/estilo_recyclerview"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_topo_Arbitro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_arbitro_partida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/txt_nome_arbitro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nome arbitro"
                    android:textColor="#000"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearPrimeiroEsporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_tipo_primeiro_esporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/txt_primeiro_esporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esporte: não informado."
                    android:textColor="#000"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/txt_primeiro_valor_arbitragem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:text="Valor: Não informado."
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSegundoEsporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_tipo_segundo_esporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/txt_segundo_esporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esporte: não informado."
                    android:textColor="#000"
                    android:textSize="10dp"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_segundo_valor_arbitragem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:text="Valor: Não informado."
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:textSize="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearTerceiroEsporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_tipo_terceiro_esporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_terceiro_esporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esporte: não informado."
                    android:textColor="#000"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/txt_terceiro_valor_arbitragem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="3dp"
                    android:text="Valor: Não informado."
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:textSize="10dp"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_endereco_arbitro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_tipo_de_esporte"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/txt_cidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cidade arbitro"
                    android:textColor="#000"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/txt_distancia_disponivel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="distancia disponivel"
                    android:textColor="#000"
                    android:textSize="10dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>